---
import { motion } from 'framer-motion';
---

<section class="py-24 bg-gray-50 dark:bg-gray-800 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        Featured
        <span class="bg-gradient-to-r from-primary-500 to-secondary-500 bg-clip-text text-transparent">
          Templates
        </span>
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-8">
        Professional-grade SVG templates ready for your laser cutter or Cricut machine.
      </p>
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        <span class="px-4 py-2 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full text-sm font-medium">
          üî• Glowforge Ready
        </span>
        <span class="px-4 py-2 bg-secondary-100 dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200 rounded-full text-sm font-medium">
          ‚úÇÔ∏è Cricut Compatible
        </span>
        <span class="px-4 py-2 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded-full text-sm font-medium">
          üé® Multi-Layer Design
        </span>
      </div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      <!-- Template Card 1 -->
      <div class="card card-hover group cursor-pointer relative overflow-hidden">
        <div class="aspect-square bg-gradient-to-br from-orange-100 to-orange-200 dark:from-orange-900 dark:to-orange-800 relative">
          <div class="absolute inset-4 bg-white dark:bg-gray-800 rounded-lg shadow-inner flex items-center justify-center">
            <svg class="w-24 h-24 text-orange-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7V10C2 16 6 20.5 12 22C18 20.5 22 16 22 10V7L12 2Z"/>
            </svg>
          </div>
          <div class="absolute top-3 right-3 bg-primary-500 text-white px-2 py-1 rounded-full text-xs font-bold">
            FREE
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Geometric Shield</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">Perfect for wall art or decorative panels</p>
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Wood</span>
              <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Acrylic</span>
            </div>
            <button class="btn btn-primary text-sm">Download</button>
          </div>
        </div>
      </div>

      <!-- Template Card 2 -->
      <div class="card card-hover group cursor-pointer relative overflow-hidden">
        <div class="aspect-square bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900 dark:to-blue-800 relative">
          <div class="absolute inset-4 bg-white dark:bg-gray-800 rounded-lg shadow-inner flex items-center justify-center">
            <svg class="w-24 h-24 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.9 1 3 1.9 3 3V21C3 22.1 3.9 23 5 23H19C20.1 23 21 22.1 21 21V9Z"/>
            </svg>
          </div>
          <div class="absolute top-3 right-3 bg-yellow-500 text-white px-2 py-1 rounded-full text-xs font-bold">
            PRO
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Gift Box Template</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">Customizable gift box with snap-fit assembly</p>
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Cardboard</span>
              <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Wood</span>
            </div>
            <button class="btn btn-outline text-sm">Upgrade</button>
          </div>
        </div>
      </div>

      <!-- Template Card 3 -->
      <div class="card card-hover group cursor-pointer relative overflow-hidden">
        <div class="aspect-square bg-gradient-to-br from-green-100 to-green-200 dark:from-green-900 dark:to-green-800 relative">
          <div class="absolute inset-4 bg-white dark:bg-gray-800 rounded-lg shadow-inner flex items-center justify-center">
            <svg class="w-24 h-24 text-green-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17,8C8,10 5.9,16.17 3.82,21.34L5.71,22L6.66,19.7C7.14,19.87 7.64,20 8,20C19,20 22,3 22,3C21,5 14,5.25 9,6.25C4,7.25 2,11.5 2,13.5C2,15.5 3.75,17.25 3.75,17.25C7,8 17,8 17,8Z"/>
            </svg>
          </div>
          <div class="absolute top-3 right-3 bg-primary-500 text-white px-2 py-1 rounded-full text-xs font-bold">
            FREE
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Leaf Coaster Set</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">Nature-inspired coasters for home decor</p>
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Wood</span>
              <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Leather</span>
            </div>
            <button class="btn btn-primary text-sm">Download</button>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center">
      <a href="/templates" class="btn btn-primary text-lg px-8 py-4">
        Browse All Templates
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>