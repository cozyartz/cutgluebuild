---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/home/Hero.tsx';
import Features from '../components/home/Features.astro';
import Templates from '../components/home/Templates.astro';
import Testimonials from '../components/home/Testimonials.astro';
import CTA from '../components/home/CTA.astro';
import Footer from '../components/Footer.astro';

// Structured Data for Homepage
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "CutGlueBuild",
  "url": "https://cutgluebuild.com",
  "logo": "https://cutgluebuild.com/CGB-Logo.svg",
  "description": "Professional AI-powered laser cutting platform for makers and fabricators",
  "foundingDate": "2025",
  "sameAs": [
    "https://twitter.com/cutgluebuild",
    "https://github.com/cozyartz/cutgluebuild"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "",
    "contactType": "Customer Service",
    "email": "support@cutgluebuild.com"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "US"
  }
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "CutGlueBuild",
  "url": "https://cutgluebuild.com",
  "description": "AI-powered CNC laser cutting tools for makers and creators",
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://cutgluebuild.com/search?q={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  }
};

const softwareApplicationSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "CutGlueBuild Professional Platform",
  "applicationCategory": "DesignApplication",
  "operatingSystem": "Web Browser",
  "description": "Professional AI-powered platform for generating laser-cutting ready SVG designs, G-code generation, and automated fabrication workflows",
  "offers": [
    {
      "@type": "Offer",
      "name": "Starter Plan",
      "price": "49",
      "priceCurrency": "USD",
      "billingIncrement": "P1M",
      "description": "Professional starter plan with commercial license"
    },
    {
      "@type": "Offer",
      "name": "Professional Plan",
      "price": "99",
      "priceCurrency": "USD",
      "billingIncrement": "P1M",
      "description": "Unlimited AI designs with G-code generation"
    }
  ],
  "creator": {
    "@type": "Organization",
    "name": "CutGlueBuild"
  }
};

const structuredData = [organizationSchema, websiteSchema, softwareApplicationSchema];
---

<Layout 
  title="Professional AI Laser Cutting Platform | CutGlueBuild - Save 10+ Hours/Week" 
  description="Professional AI-powered laser cutting platform. Generate manufacturable designs in 2 minutes. Starting at $49/month with 7-day money-back guarantee. 95% success rate."
  keywords="professional AI laser cutting, CNC fabrication platform, automated SVG generator, G-code generation, maker tools, commercial license"
  structuredData={structuredData}
>
  <Header />
  <Hero client:load />
  <Features />
  <Templates />
  <Testimonials />
  <CTA />
  <Footer />
</Layout>