---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Templates - CutGlueBuild.com" description="Browse our collection of laser-cut and Cricut-ready SVG templates. Perfect for makers and creators.">
  <Header />
  
  <main class="pt-20 min-h-screen bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Hero Section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Premium
          <span class="bg-gradient-to-r from-primary-500 to-secondary-500 bg-clip-text text-transparent">
            Templates
          </span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Professional-grade SVG templates ready for your laser cutter, Cricut machine, or any cutting tool.
        </p>
      </div>

      <!-- Filter Bar -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-8">
        <div class="flex flex-wrap gap-4 items-center justify-between">
          <div class="flex flex-wrap gap-3">
            <select class="px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
              <option>All Categories</option>
              <option>Home Decor</option>
              <option>Gifts</option>
              <option>Tools & Jigs</option>
              <option>Art Projects</option>
            </select>
            <select class="px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
              <option>All Materials</option>
              <option>Wood</option>
              <option>Acrylic</option>
              <option>Cardboard</option>
              <option>Leather</option>
            </select>
            <select class="px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
              <option>All Machines</option>
              <option>Glowforge</option>
              <option>Cricut</option>
              <option>Generic Laser</option>
            </select>
          </div>
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-600 dark:text-gray-400">Sort by:</span>
            <select class="px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white text-sm">
              <option>Newest</option>
              <option>Most Popular</option>
              <option>Free First</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Templates Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-12">
        <!-- Template Card 1 -->
        <div class="card card-hover group cursor-pointer">
          <div class="aspect-square bg-gradient-to-br from-orange-100 to-orange-200 dark:from-orange-900 dark:to-orange-800 relative rounded-t-xl">
            <div class="absolute inset-4 bg-white dark:bg-gray-800 rounded-lg shadow-inner flex items-center justify-center">
              <svg class="w-16 h-16 text-orange-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2L2 7V10C2 16 6 20.5 12 22C18 20.5 22 16 22 10V7L12 2Z"/>
              </svg>
            </div>
            <div class="absolute top-3 right-3 bg-green-500 text-white px-2 py-1 rounded-full text-xs font-bold">
              FREE
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Geometric Shield</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-3">Perfect for wall art or decorative panels</p>
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-1">
                <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Wood</span>
                <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Acrylic</span>
              </div>
              <button class="btn btn-primary text-sm px-4 py-2">Download</button>
            </div>
          </div>
        </div>

        <!-- Template Card 2 -->
        <div class="card card-hover group cursor-pointer">
          <div class="aspect-square bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900 dark:to-blue-800 relative rounded-t-xl">
            <div class="absolute inset-4 bg-white dark:bg-gray-800 rounded-lg shadow-inner flex items-center justify-center">
              <svg class="w-16 h-16 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.9 1 3 1.9 3 3V21C3 22.1 3.9 23 5 23H19C20.1 23 21 22.1 21 21V9Z"/>
              </svg>
            </div>
            <div class="absolute top-3 right-3 bg-yellow-500 text-white px-2 py-1 rounded-full text-xs font-bold">
              PRO
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Gift Box Template</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-3">Customizable gift box with snap-fit assembly</p>
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-1">
                <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Cardboard</span>
                <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Wood</span>
              </div>
              <button class="btn btn-outline text-sm px-4 py-2">Upgrade</button>
            </div>
          </div>
        </div>

        <!-- Template Card 3 -->
        <div class="card card-hover group cursor-pointer">
          <div class="aspect-square bg-gradient-to-br from-green-100 to-green-200 dark:from-green-900 dark:to-green-800 relative rounded-t-xl">
            <div class="absolute inset-4 bg-white dark:bg-gray-800 rounded-lg shadow-inner flex items-center justify-center">
              <svg class="w-16 h-16 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17,8C8,10 5.9,16.17 3.82,21.34L5.71,22L6.66,19.7C7.14,19.87 7.64,20 8,20C19,20 22,3 22,3C21,5 14,5.25 9,6.25C4,7.25 2,11.5 2,13.5C2,15.5 3.75,17.25 3.75,17.25C7,8 17,8 17,8Z"/>
              </svg>
            </div>
            <div class="absolute top-3 right-3 bg-green-500 text-white px-2 py-1 rounded-full text-xs font-bold">
              FREE
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Leaf Coaster Set</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-3">Nature-inspired coasters for home decor</p>
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-1">
                <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Wood</span>
                <span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Leather</span>
              </div>
              <button class="btn btn-primary text-sm px-4 py-2">Download</button>
            </div>
          </div>
        </div>

        <!-- More template cards would go here -->
        <div class="card card-hover group cursor-pointer opacity-50">
          <div class="aspect-square bg-gradient-to-br from-purple-100 to-purple-200 dark:from-purple-900 dark:to-purple-800 relative rounded-t-xl">
            <div class="absolute inset-4 bg-white dark:bg-gray-800 rounded-lg shadow-inner flex items-center justify-center">
              <div class="text-4xl">ðŸ”’</div>
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">More Templates Coming Soon</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-3">Subscribe to get early access</p>
            <button class="btn btn-primary text-sm px-4 py-2 w-full">Subscribe</button>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="text-center bg-gradient-to-r from-primary-500 to-secondary-500 rounded-xl p-8 text-white">
        <h2 class="text-2xl font-bold mb-4">Can't Find What You Need?</h2>
        <p class="mb-6">Use our AI tools to create custom SVGs from your ideas</p>
        <a href="/tools" class="btn bg-white text-primary-500 hover:bg-gray-100">Try AI Tools</a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>