---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.published_at).getTime() - new Date(a.data.published_at).getTime());

// Get featured post (most recent)
const featuredPost = sortedPosts[0];
const otherPosts = sortedPosts.slice(1);

// Get unique categories and tags
const categories = [...new Set(posts.flatMap(post => post.data.tags || []))];
---

<Layout title="Maker Blog - CutGlueBuild" description="Laser cutting inspiration and tutorials.">
  <Header />

  <main class="pt-20 min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Hero Section -->
    <div class="bg-gradient-to-br from-primary-50 via-white to-secondary-50 dark:from-primary-900 dark:via-gray-900 dark:to-secondary-900 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Maker
          <span class="bg-gradient-to-r from-primary-500 to-secondary-500 bg-clip-text text-transparent">
            Blog
          </span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Tutorials, tips, and inspiration for laser cutting, CNC, and digital fabrication.
        </p>
      </div>
    </div>

    <!-- Featured Post -->
    {featuredPost && (
      <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Featured Article</h2>
          <div class="w-16 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 rounded"></div>
        </div>
        
        <article class="card card-hover overflow-hidden lg:flex lg:items-center">
          <div class="lg:w-1/2">
            {featuredPost.data.featured_image && (
              <img
                src={featuredPost.data.featured_image} 
                alt={featuredPost.data.title}
                class="w-full h-64 lg:h-80 object-cover"
              />
            )}
          </div>
          <div class="p-8 lg:w-1/2">
            <div class="flex items-center mb-4">
              {featuredPost.data.tags && featuredPost.data.tags[0] && (
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full text-sm font-medium mr-3">
                  {featuredPost.data.tags[0]}
                </span>
              )}
              <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {new Date(featuredPost.data.published_at).toLocaleDateString()}
              </div>
            </div>
            
            <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 dark:text-white mb-4">
              <a href={`/blog/${featuredPost.slug}`} class="hover:text-primary-500 transition-colors">
                {featuredPost.data.title}
              </a>
            </h3>
            
            <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
              {featuredPost.data.excerpt}
            </p>
            
            <div class="flex items-center justify-between">
              {featuredPost.data.author && (
                <div class="flex items-center">
                  <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-full flex items-center justify-center text-white font-bold text-sm mr-3">
                    {featuredPost.data.author.charAt(0)}
                  </div>
                  <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                    {featuredPost.data.author}
                  </span>
                </div>
              )}
              
              <a 
                href={`/blog/${featuredPost.slug}`} 
                class="btn btn-primary inline-flex items-center"
              >
                Read Article
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </article>
      </section>
    )}

    <!-- Filter Tags -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-wrap gap-2 mb-8">
        <button class="filter-tag active" data-filter="all">All Posts</button>
        {categories.map(category => (
          <button class="filter-tag" data-filter={category.toLowerCase()}>
            {category}
          </button>
        ))}
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="posts-grid">
        {otherPosts.map(post => (
          <article 
            class="card card-hover overflow-hidden blog-post-card" 
            data-tags={post.data.tags ? post.data.tags.map(tag => tag.toLowerCase()).join(',') : ''}
          >
            <div class="h-48 bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center relative overflow-hidden">
              {post.data.featured_image ? (
                <img
                  src={post.data.featured_image} 
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                />
              ) : (
                <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2Z"/>
                </svg>
              )}
              
              {post.data.tags && post.data.tags[0] && (
                <div class="absolute top-3 left-3">
                  <span class="px-2 py-1 bg-white/90 text-gray-800 rounded text-xs font-medium">
                    {post.data.tags[0]}
                  </span>
                </div>
              )}
            </div>
            
            <div class="p-6">
              <div class="flex items-center mb-3 text-xs text-gray-600 dark:text-gray-400">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {new Date(post.data.published_at).toLocaleDateString()}
              </div>
              
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3 line-clamp-2">
                <a href={`/blog/${post.slug}`} class="hover:text-primary-500 transition-colors">
                  {post.data.title}
                </a>
              </h3>
              
              <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
                {post.data.excerpt}
              </p>
              
              <div class="flex items-center justify-between">
                {post.data.author && (
                  <div class="flex items-center">
                    <div class="w-6 h-6 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-full flex items-center justify-center text-white font-bold text-xs mr-2">
                      {post.data.author.charAt(0)}
                    </div>
                    <span class="text-xs text-gray-600 dark:text-gray-400">
                      {post.data.author}
                    </span>
                  </div>
                )}
                
                <a 
                  href={`/blog/${post.slug}`} 
                  class="text-primary-500 hover:text-primary-600 text-sm font-medium inline-flex items-center"
                >
                  Read More
                  <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
      
      {otherPosts.length === 0 && (
        <div class="text-center py-12">
          <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No posts yet</h3>
          <p class="text-gray-600 dark:text-gray-400">Check back soon for maker tutorials and tips!</p>
        </div>
      )}
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .filter-tag {
    @apply px-4 py-2 rounded-full text-sm font-medium transition-all duration-200;
    @apply bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300;
    @apply hover:bg-primary-100 dark:hover:bg-primary-900 hover:text-primary-700 dark:hover:text-primary-300;
  }
  
  .filter-tag.active {
    @apply bg-primary-500 text-white;
  }
  
  .blog-post-card {
    transition: all 0.3s ease;
  }
  
  .blog-post-card.hidden {
    opacity: 0;
    transform: scale(0.95);
    pointer-events: none;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Filter functionality
  const filterTags = document.querySelectorAll('.filter-tag');
  const postCards = document.querySelectorAll('.blog-post-card');
  
  filterTags.forEach(tag => {
    tag.addEventListener('click', () => {
      const filter = (tag as HTMLElement).dataset.filter;
      
      // Update active state
      filterTags.forEach(t => t.classList.remove('active'));
      tag.classList.add('active');
      
      // Filter posts
      postCards.forEach(card => {
        const cardTags = (card as HTMLElement).dataset.tags?.split(',') || [];
        const shouldShow = filter === 'all' || cardTags.includes(filter);
        
        if (shouldShow) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  });
</script>
</Layout>