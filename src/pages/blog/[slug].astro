    @apply mb-4 leading-relaxed;
  }
  
  .prose ul {
    @apply mb-4 pl-6;
  }
  
  .prose li {
    @apply mb-2 list-disc;
  }
  
  .prose strong {
    @apply font-semibold text-gray-900 dark:text-white;
  }
  
  .prose code {
    @apply bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded text-sm font-mono;
  }
</style>