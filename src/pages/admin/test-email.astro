---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Test Email - CutGlueBuild Admin">
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12">
    <div class="max-w-md mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Test Email Configuration</h1>
      
      <div id="status-container" class="mb-6">
        <button id="check-status" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">
          Check Email Service Status
        </button>
      </div>

      <div id="status-result" class="mb-6 p-4 rounded-lg hidden"></div>

      <form id="test-email-form" class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Test Email Address
          </label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required
            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
            placeholder="Enter email to send test to"
          />
        </div>
        
        <button type="submit" class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700">
          Send Test Email
        </button>
      </form>

      <div id="test-result" class="mt-6 p-4 rounded-lg hidden"></div>

      <div class="mt-8 text-sm text-gray-600 dark:text-gray-400">
        <h3 class="font-medium mb-2">Setup Instructions:</h3>
        <ol class="list-decimal list-inside space-y-1 text-xs">
          <li>Configure Purelymail SMTP in your <a href="https://purelymail.com" target="_blank" class="text-blue-600 underline">Purelymail dashboard</a></li>
          <li>Add SMTP_PASSWORD to your environment variables</li>
          <li>Verify your sending domain (cutgluebuild.com)</li>
          <li>Test the configuration using this form</li>
        </ol>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Check Email Service status
  document.getElementById('check-status')?.addEventListener('click', async () => {
    const resultDiv = document.getElementById('status-result');
    if (!resultDiv) return;

    try {
      const response = await fetch('/api/test-email');
      const result = await response.json();

      resultDiv.className = `mb-6 p-4 rounded-lg ${
        response.ok ? 'bg-green-100 border border-green-400 text-green-700' : 'bg-red-100 border border-red-400 text-red-700'
      }`;
      resultDiv.innerHTML = `
        <p><strong>Status:</strong> ${response.ok ? 'Ready' : 'Not Ready'}</p>
        <p><strong>Configured:</strong> ${result.status?.configured ? 'Yes' : 'No'}</p>
        <p><strong>Sender:</strong> ${result.status?.sender || 'Not configured'}</p>
        ${result.error ? `<p><strong>Error:</strong> ${result.error}</p>` : ''}
      `;
      resultDiv.classList.remove('hidden');
    } catch (error) {
      resultDiv.className = 'mb-6 p-4 rounded-lg bg-red-100 border border-red-400 text-red-700';
      resultDiv.innerHTML = `<p><strong>Error:</strong> ${error.message}</p>`;
      resultDiv.classList.remove('hidden');
    }
  });

  // Send test email
  document.getElementById('test-email-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target as HTMLFormElement);
    const email = formData.get('email') as string;
    const resultDiv = document.getElementById('test-result');
    if (!resultDiv) return;

    try {
      const response = await fetch('/api/test-email', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email }),
      });

      const result = await response.json();

      resultDiv.className = `mt-6 p-4 rounded-lg ${
        response.ok ? 'bg-green-100 border border-green-400 text-green-700' : 'bg-red-100 border border-red-400 text-red-700'
      }`;
      
      if (response.ok) {
        resultDiv.innerHTML = `<p><strong>Success!</strong> ${result.message}</p>`;
      } else {
        resultDiv.innerHTML = `<p><strong>Error:</strong> ${result.error}</p>`;
      }
      
      resultDiv.classList.remove('hidden');

    } catch (error) {
      resultDiv.className = 'mt-6 p-4 rounded-lg bg-red-100 border border-red-400 text-red-700';
      resultDiv.innerHTML = `<p><strong>Error:</strong> ${error.message}</p>`;
      resultDiv.classList.remove('hidden');
    }
  });
</script>